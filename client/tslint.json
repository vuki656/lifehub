{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-config-standard",
        "tslint-react"
    ],
    "rules": {
        "interface-name": [
            true,
            "never-prefix"
        ],
        "interface-over-type-literal": false,
        "jsx-boolean-value": false,
        "jsx-no-multiline-js": false,
        "max-line-length": [
            true,
            240
        ],
        "no-namespace": [
            true,
            "allow-declarations"
        ],
        "no-shadowed-variable": false,
        "object-literal-key-quotes": [
            true,
            "as-needed"
        ],
        "object-literal-sort-keys": false,
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "space-before-function-paren": false,
        "ter-indent": [
            true,
            4,
            {
                "SwitchCase": true
            }
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ]
    }
}
