{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2018",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "jsx": "preserve",
        "baseUrl": "./",
        "moduleResolution": "node",
        "strict": true,
        "noEmit": true,
        "allowJs": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "node_modules/@types",
            "src/@types"
        ],
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "**/node_modules",
        "**/*.test.ts",
        "**/*.test.tsx"
    ]
}
