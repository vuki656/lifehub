{
    "compilerOptions": {
        "esModuleInterop": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "strictNullChecks": true,
        "target": "es2018",
        "module": "commonjs",
        "lib": [
            "es2018",
            "esnext.asynciterable"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": ["reflect-metadata"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/tests/",
        "**/dist/"
    ]
}
